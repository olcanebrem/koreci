{
  "$schema": "https://cursor.sh/schema/cursor.json",
  "include": [
    "src/**/*.{astro,js,ts,jsx,tsx}",
    "public/*.json",
    "astro.config.mjs",
    "tsconfig.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".astro",
    "package-lock.json",
    "yarn.lock"
  ],
  "settings": {
    "framework": "astro",
    "preferredLanguage": "typescript"
  }
}
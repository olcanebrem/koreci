---
import PortableText from '../components/PortableText'
import { fetchSanity } from '@/lib/sanity'
import { urlFor } from '@/lib/sanityImage'

const { slug } = Astro.params

const query = `*[_type == "post" && slug.current == "faal"][0]{
  title,
  content,
  mainImage
}`

const sanityPost = await fetchSanity(query)
const imageUrl = sanityPost?.mainImage
  ? urlFor(sanityPost.mainImage).width(1000).url()
  : null


import dateFormat from "@/lib/utils/dateFormat";
import readingTime from "@/lib/utils/readingTime";

import { humanize, slugify } from "@/lib/utils/textConverter";
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import { render } from "astro:content";
import {
  FaRegCalendarAlt,
  FaRegClock,
  FaRegFolder,
  FaRegUserCircle,
} from "react-icons/fa";

type Props = {
  post: CollectionEntry<"blog">;
};

const { post } = Astro.props;
const { Content } = await render(post);
---

<section class="section blog-single">
  <div class="container">
    <div class="row justify-center">
      <div class="lg:col-10">
        <Image
          class="rounded-xl aspect-video object-contain"
          src={post.data.image!}
          alt=""
          width={920}
          height={450}
        />
      </div>
      <div class="mt-10 max-w-[810px] lg:col-9">
        <h1 class="h2">
          {post.data.title}
        </h1>
        <div class="mb-5 mt-6 flex items-center space-x-2">
          <ul class="mb-4">
            <li class="mr-4 inline-block">
              <FaRegUserCircle className={"mr-2 -mt-1 inline-block"} />
              {humanize(post.data.author!)}
            </li>

            <li class="mr-4 inline-block">
              <FaRegCalendarAlt className={"mr-2 -mt-1 inline-block"} />
              {dateFormat(post.data.date!)}
            </li>

            {
              post.body && (
                <li class="mr-4 inline-block">
                  <FaRegClock className={"mr-2 -mt-1 inline-block"} />
                  {readingTime(post.body)}
                </li>
              )
            }

            <li class="mr-4 inline-block">
              <FaRegFolder className={"mr-2 -mt-1 inline-block"} />
              {
                post.data.categories.map((category, index) => (
                  <a
                    href={`/categories/${slugify(category)}`}
                    class="hover:text-primary"
                  >
                    {humanize(category)}
                    {index !== post.data.categories.length - 1 && ","}
                  </a>
                ))
              }
            </li>
          </ul>
        </div>

        <div class="content">
          <Content />
        </div>
      </div>
    </div>
  </div>
</section>

<article class="max-w-3xl mx-auto py-8">
  <h1 class="text-3xl font-bold mb-4">{sanityPost.title}</h1>
  {!sanityPost && <p>Post bulunamadÄ±</p>}
  {sanityPost && (
    <>
      <h1>{sanityPost.title}</h1>
      <PortableText value={sanityPost.content} />
    </>
  )}
  {imageUrl && (
    <img src={imageUrl} alt={sanityPost.title} class="rounded-xl shadow-lg mb-6" />
  )}
  
  <PortableText value={sanityPost.content} />
</article>

---
// Blog post listesi componenti
import type { StrapiBlog } from '@/types/strapi';

interface Props {
  posts: StrapiBlog[];
}

---

<div class="grid gap-6 md:grid-cols-2">
  {posts.map(post => (
    <article class="border rounded-lg overflow-hidden">
      <a href={`/blog/${post.slug}`}>
        {post.image?.data?.url && (
          <img
            src={post.image.data.url}
            alt={post.title}
            class="w-full h-48 object-cover"
            width="400"
            height="225"
            loading="lazy"
          />
        )}
        <div class="p-4">
          <h2 class="text-xl font-bold">{post.title}</h2>
          <p class="mt-2 text-gray-600">
            
          </p>
        </div>
      </a>
    </article>
  ))}
</div>
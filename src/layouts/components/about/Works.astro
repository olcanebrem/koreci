---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

type Props = {
  features: CollectionEntry<"about">["data"]["features"];
};
const {
  features: { title, button, features_list },
} = Astro.props;
---

<section class="section">
  <div class="container">
    <div class="row items-center justify-between">
      <div class="md:col-5">
        <h2 class="text-center md:text-left" set:html={title} />
      </div>
      {
        button.enable && (
          <div class="mt-6 text-center md:col-3 md:mt-0 md:text-right">
            <a class="btn btn-primary" href={button.link}>
              {button.label}
            </a>
          </div>
        )
      }
    </div>
    
  </div>
</section>

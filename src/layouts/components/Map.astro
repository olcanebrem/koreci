---
const apiKey = import.meta.env.PUBLIC_GOOGLE_MAPS_API_KEY;
const address = "İstanbul, Türkiye";
const mapSrc = `https://www.google.com/maps/embed/v1/place?key=${apiKey}&q=${encodeURIComponent(address)}`;
---

<html>
  <head>
    <script async src="https://maps.googleapis.com/maps/api/js?key={apiKey}&callback=initMap"></script>
  </head>
  <body>
    <h1>Google Maps API ile Astro</h1>
    
    <iframe
      width="600"
      height="450"
      style="border:0"
      loading="lazy"
      allowfullscreen
      src={mapSrc}>
    </iframe>

    <script>
      function initMap() {
        const map = new google.maps.Map(document.getElementById("map"), {
          center: { lat: 41.0082, lng: 28.9784 },
          zoom: 10,
        });
      }
    </script>
    
  </body>
</html>

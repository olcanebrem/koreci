<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Yerel GÃ¶rseller ile Animasyon</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      background-color: #f0f0f0;
    }

    .cardi-container {
      position: absolute;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      overflow: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .cardi-wrapper {
      position: absolute;
      width: 150px;
      height: 200px;
      top: 50%;
      left: 50%;
      transform-origin: center center;
      animation: rotateCards 10s infinite linear;
    }

    .cardi {
      position: absolute;
      width: 100%;
      height: 100%;
      transform: translateX(400px);
    }

    .cardi img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 8px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    @keyframes rotateCards {
      from {
        transform: translate(-50%, -50%) rotate(0deg);
      }
      to {
        transform: translate(-50%, -50%) rotate(360deg);
      }
    }
  </style>
</head>
<body>
  <div id="cardi-container" class="cardi-container"></div>

  <script>
    const userImages = [
      '/images/cardi/image1.jpg',
      '/images/cardi/image2.jpg',
      '/images/cardi/image3.jpg',
      '/images/cardi/image4.jpg',
      '/images/cardi/image5.jpg',
      '/images/cardi/image6.jpg',
      '/images/cardi/image7.jpg',
      '/images/cardi/image8.jpg',
    ];

    document.addEventListener('DOMContentLoaded', () => {
      const container = document.getElementById('cardi-container');
      if (!container) return;

      const totalCards = 8;
      let html = '';
      for (let i = 0; i < totalCards; i++) {
        const angleStep = 360 / totalCards;
        const positionAngle = angleStep * i;
        const imageIndex = i % userImages.length;
        html += `
          <div class="cardi-wrapper" style="--position-angle: ${positionAngle}deg;">
            <div class="cardi">
              <img src="${userImages[imageIndex]}" alt="User ${i}" />
            </div>
          </div>
        `;
      }
      container.innerHTML = html;
    });
  </script>
</body>
</html>
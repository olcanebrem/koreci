---
import config from "@/config/config.json";
import { humanize, plainify, slugify } from "@/lib/utils/textConverter";
import { Image } from "astro:assets";
// import Datestr from "../../partials/Datestr.astro"; // Remove incorrect import
// import type { CollectionEntry } from "astro:content"; // Remove astro:content type
const { summary_length } = config.settings;

// Define the structure for a category based on Sanity data
interface SanityCategory {
  title?: string;
  slug?: { current?: string };
}

// Define a basic type matching the Sanity data passed from [page].astro
interface SanityPost {
  _id?: string;
  slug: { current: string };
  title: string;
  publishedAt?: string;
  isFeatured?: boolean;
  body: any[]; // Array of blocks
  mainImage?: { asset?: { url?: string } };
  categories?: SanityCategory[]; // Update categories type
}

type Props = {
  posts: SanityPost[]; // Update prop type
};
const { posts } = Astro.props;

// Helper function to format date (can be moved to a utils file later)
const formatDate = (dateString?: string) => {
  if (!dateString) return "";
  return new Date(dateString).toLocaleDateString("en-US", {
    year: "numeric",
    month: "short",
    day: "numeric",
  });
};

// Helper to get first text block for summary
const getSummaryText = (body: any[]): string => {
  if (!body || !Array.isArray(body)) return "";
  const firstBlock = body.find(block => block._type === 'block' && block.children);
  const firstChild = firstBlock?.children?.find((child: any) => child._type === 'span' && child.text);
  return firstChild?.text || "";
};
---

<h2 class="h4 mb-4">Featured Posts</h2>
<div class="featured-posts row">
  {
    posts.map((post) => (
      <div class="mb-8 md:col-6">
        <div class="card">
          {/* Use Sanity image data. Use regular img tag if astro:assets Image causes issues */}
          {post.mainImage?.asset?.url && (
            <a href={`/blog/${post.slug?.current}`} class="rounded-lg block overflow-hidden">
              <img
                class="card-img aspect-video object-cover transition duration-300 hover:scale-105"
                width="235"
                height="304"
                src={post.mainImage.asset.url}
                alt={post.title}
                loading="lazy"
              />
            </a>
          )}
          <div class="card-content flex flex-col flex-grow p-4">
            {/* Render categories */}
            {post.categories && post.categories.length > 0 && (
              <div class="card-tags space-x-1 mb-2">
                {post.categories.map((category) => {
                  const categoryTitle = category.title ?? "Uncategorized";
                  const categorySlug = category.slug?.current || slugify(categoryTitle);
                  const categoryUrl = `/categories/${categorySlug}`;
                  return (
                    <a class="tag" href={categoryUrl}>
                      {humanize(categoryTitle)}
                    </a>
                  );
                })}
              </div>
            )}
            <h3 class="h4 card-title mb-2">
              <a class="hover:text-primary" href={`/blog/${post.slug?.current}`}>{post.title}</a>
            </h3>
            {/* Use helper to get summary text from Sanity body */}
            {post.body && (
              <p class="mb-4 text-text">
                {plainify(getSummaryText(post.body).slice(0, Number(summary_length)))}...
              </p>
            )}

            <div class="card-footer mt-auto flex items-center space-x-4">
              {/* Display formatted date */}
              {post.publishedAt && (
                <time datetime={post.publishedAt} class="text-sm text-gray-600">
                  {formatDate(post.publishedAt)}
                </time>
              )}
              {/* Add other footer content if needed */}
            </div>
          </div>
        </div>
      </div>
    ))
  }
</div>

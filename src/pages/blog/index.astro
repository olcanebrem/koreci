---
// src/pages/strapi.astro
import Base from '@/layouts/Base.astro';
import { getBlogPosts } from 'lib/strapi';
import BlogPost from '@/components/BlogPost.astro';
// Veriyi güvenli şekilde alalım
const postsResponse = await getBlogPosts();
const posts = postsResponse?.data || []; // Fallback olarak boş dizi
---
<BlogPost>
<Base title="Strapi Blog Yazıları">
  <main class="container py-8">
    <h1 class="text-3xl font-bold mb-8">Blog Yazıları</h1>

    {posts.length > 0 ? (
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {posts.map(post => (
          <article class="border rounded-lg overflow-hidden hover:shadow-lg transition-shadow">
            <a href={`/blog/${post.slug}`} class="block h-full">
              {post.image?.data?.url && (
                <img
                  src={post.image.data.url}
                  alt={post.title}
                  class="w-full h-48 object-cover"
                  width="400"
                  height="225"
                  loading="lazy"
                />
              )}
              <div class="p-4">
                <h2 class="text-xl font-bold">{post.title}</h2>
                <p class="mt-2 text-gray-600 line-clamp-3">
                  {post.excerpt || post.content.substring(0, 100)}...
                </p>
              </div>
            </a>
          </article>
        ))}
      </div>
    ) : (
      <div class="text-center py-12">
        <p class="text-lg text-gray-500">Henüz blog yazısı eklenmemiş</p>
      </div>
    )}
  </main>
</Base>